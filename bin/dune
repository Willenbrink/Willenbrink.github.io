(executable
 (name main)
 (libraries js_of_ocaml brr
    raytracer)
 (preprocess
  (pps js_of_ocaml-ppx))
 (modes js))

(rule
    (targets index.html)
    (deps main.html)
    (action (run cp %{deps} %{targets})))

(rule
    (targets main.js)
    (deps main.bc.js)
    (action (run cp %{deps} %{targets})))

(alias
    (name default)
    (deps main.js index.html))
